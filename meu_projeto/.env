# URL do seu site (para webhook)
SITE_URL=https://your-domain.com

# =====================================================
# CONFIGURAÇÕES GERAIS
# =====================================================

# Chave secreta do Django (para produção)
SECRET_KEY=your-django-secret-key-here

# Ambiente (development/production)
DEBUG=True