# =====================================================
# CONFIGURAÇÕES GERAIS DO DJANGO
# =====================================================
SECRET_KEY=sua_chave_secreta_super_segura_aqui
DEBUG=False
ALLOWED_HOSTS=dojo-on.onrender.com,localhost,127.0.0.1

# =====================================================
# CONFIGURAÇÕES DO BANCO DE DADOS (SUPABASE)
# =====================================================
DB_NAME=postgres
DB_USER=seu_usuario_supabase
DB_PASSWORD=sua_senha_supabase
DB_HOST=seu_host_supabase.supabase.co
DB_PORT=5432
USE_SQLITE_FALLBACK=False

# =====================================================
# CONFIGURAÇÕES DO MERCADO PAGO
# =====================================================
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_mercadopago
MERCADOPAGO_PUBLIC_KEY=sua_public_key_mercadopago
MERCADOPAGO_WEBHOOK_SECRET=seu_webhook_secret_mercadopago
MERCADOPAGO_WEBHOOK_URL=https://dojo-on.onrender.com/payments/webhook/

# =====================================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# =====================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_de_app
DEFAULT_FROM_EMAIL=noreply@dojo-on.com

# =====================================================
# INSTRUÇÕES DE CONFIGURAÇÃO
# =====================================================
# 1. Copie este arquivo para .env
# 2. Preencha todas as variáveis com seus valores reais
# 3. Para o Supabase:
#    - Acesse: https://supabase.com/dashboard
#    - Vá em Settings > Database
#    - Copie as informações de conexão
# 4. Para o Mercado Pago:
#    - Acesse: https://www.mercadopago.com.br/developers
#    - Crie uma aplicação e obtenha as chaves
# 5. Para o Render:
#    - Adicione todas essas variáveis no painel de Environment Variables
